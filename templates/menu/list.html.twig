{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<section class="background-5 p-200">
	<div class="p-5">
		<h2 class="txt-white"><strong>Our Menu</strong></h2>
		<h3 class="txt-blue">~ See what we offer ~</h3>
	</div>
</section>
<section class="content">
    <div class="text-center py-5">
		<h2 class="txt-dark">Main course</h2>
		<h3 class="txt-blue">~ Qualities in each dish ~</h3>
	</div>
    <div class="text-center py-3">
        <div class="row">
        {% for menu in menus %}
            {% if menu.category.id == 1 %}
            <div class="col-6 row p-5">
                <div class="col-4">
                    <img src="{{ asset('images/menu-thumb-19.png') }}" class="img-md mx-2" alt="">
                </div>
                <div class="col-8 text-start">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="p-2">{{ menu.name }}</p>
                        <div class="dots"></div>
                        <p class="p-2">${{ menu.price }}</p>
                    </div>
                    <p>{{ menu.description }}</p>
                </div>
            </div> 
            {% endif %}          
        {% endfor %}
        </div>
       
    </div>  
</section>

{% endblock %}
