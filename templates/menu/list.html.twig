{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
<section class="background-5">
	<div class="p-200">
		<h1 class="txt-white">Our Menu</h1>
		<h3 class="txt-blue">~ See what we offer ~</h3>
	</div>
</section>
<section class="mb-5">
    <div class="text-center padding-title">
		<h2 class="txt-dark">Main course</h2>
		<h3 class="txt-blue">~ Qualities in each dish ~</h3>
	</div>
    <div class="text-center px-5 pb-5">
        <div class="row px-5">
        {% for menu in menus %}
            {% if menu.category.id == 1 %}
            <div class="col-6 row p-4">
                <div class="col-3">
                    <img src="{{ asset('images/menu-thumb-19.png') }}" class="img-md mx-2" alt="">
                </div>
                <div class="col-9 text-start">
                    <div class="d-flex align-items-center dots-div">
                        <h6 class="py-2 txt-grey">{{ menu.name }}</h6>
                        <div class="dots"></div>
                        <p class="py-2">${{ menu.price }}</p>
                    </div>
                    <p>{{ menu.description }}</p>
                </div>
            </div> 
            {% endif %}          
        {% endfor %}
        </div> 
    </div>  
</section>
